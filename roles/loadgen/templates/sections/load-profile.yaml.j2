load-profile:
  block:
    size: 500
  key:
    size: 32
  transaction:
    read-write-value-size: 32
    blind-write-value-size:
    read-only-count:
    read-write-count:
      const: 2
    policy:
      config-block-path:
      namespace-policies:
        0:
          scheme: {{ loadgen_key_scheme }}
          seed: 12345
        _meta:
          scheme: {{ loadgen_key_scheme }}
          seed: 12345
{% if loadgen_user %}
          key-path:
            signing-key: {{ loadgen_config_dir }}/users/{{ loadgen_user.name }}@{{ loadgen_user.organization.domain }}/msp/keystore/priv_sk
            sign-certificate: {{ loadgen_config_dir }}/users/{{ loadgen_user.name }}@{{ loadgen_user.organization.domain }}/msp/signcerts/{{ loadgen_user.name }}@{{ loadgen_user.organization.domain }}-cert.pem
{% endif %}
  query:
    query-size:
    min-invalid-keys-portion:
    shuffle: false
  conflicts:
    invalid-signatures: 0
    dependencies:
      # - probability: 0
      #   gap:
      #     const: 500
      #   src: "read-write"
      #   dst: "read-write"
  seed: {{ loadgen_tx_seed }}
  workers: 32
